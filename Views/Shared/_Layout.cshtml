<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoftwareGestion</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoftwareGestion.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3"
            style="background-color:#75C9F0;">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Moda Lab CR</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 custom-nav" style="display: flex; justify-content: flex-end;">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Login","Home")"><i
                                    class="fa fa-sign-in"></i></a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i
                                    class="fa fa-user"></i></a>

                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <ul class="nav flex-column">

                    <li class="nav-item dropdown">
                        <div class="dropdown">
                            <a class="nav-link text-black">Gestion de Ordenes</a>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Create","GestionOrdenes")">Crear Orden</a>
                                     <div class="dropdown-divider"></div>
                                <a href="@Url.Action("Details","GestionOrdenes")">Lista de ordenes</a>
                            </div>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-black" href="#">Análisis de recursos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black" href="@Url.Action("MateriaPrima","GestionOrdenes")">Costo de materia prima</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black" href="@Url.Action("CostoTotalProducto","GestionOrdenes")">Costo total del producto</a>
                    </li>

                    </li>
                    <li class="nav-item dropdown">
                        <div class="dropdown">
                            <a class="nav-link text-black">Mantenimientos</a>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Create","Usuarios")">Usuarios</a>
                                     <div class="dropdown-divider"></div>
                                <a href="@Url.Action("Create","Productos")">Productos</a>
                                     <div class="dropdown-divider"></div>
                                <a href="@Url.Action("Create","Clientes")">Clientes</a>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <div class="dropdown">
                            <a class="nav-link text-black">Consultas</a>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Create","Usuarios")">Usuarios</a>
                                     <div class="dropdown-divider"></div>
                                <a href="@Url.Action("Create","Productos")">Productos</a>
                                     <div class="dropdown-divider"></div>
                                <a href="@Url.Action("Create","Clientes")">Clientes</a>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <div class="dropdown">
                            <a class="nav-link text-black">Reportes</a>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Create","Usuarios")">Usuarios</a>
                                     <div class="dropdown-divider"></div>
                                <a href="@Url.Action("Create","Productos")">Productos</a>
                                     <div class="dropdown-divider"></div>
                                <a href="@Url.Action("Create","Clientes")">Clientes</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>

            <!-- Contenido principal -->
            <div>
                @RenderBody()
            </div>
        </div>
    </div>



    <footer class="border-top footer text-white">
        <div class="container text-center">
            &copy; 2023 SoftwareGestion <span></span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
